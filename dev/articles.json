{
  "entities": [
    {
      "name": "knowledgeBases",
      "source": "//localhost:3000/knowledgeBases"
    },
    {
      "name": "articles",
      "source": "//localhost:3000/articles?_embed=tags&_embed=category"
    },
    {
      "name": "categories",
      "source": "//localhost:3000/categories"
    },
    {
      "name": "tags",
      "source": "//localhost:3000/tags"
    },
    {
      "name": "articleStatus",
      "source": [
        { "id": 0, "title": "Draft", "icon": "draftArticleIcon" },
        { "id": 1, "title": "Published", "icon": "publishedArticleIcon" }
      ]
    }
  ],
  "actions": [
    {
      "name": "deleteArticle",
      "confirm": "Are you sure you want to delete the article?",
      "method": "delete",
      "url": "id"
    }
  ],
  "ui": {
    "control": "vbox",
    "children": [
      {
        "control": "hbox",
        "children": [
          {
            "control": "title",
            "label": "Articles"
          },
          {
            "control": "select",
            "label": "Knowlegebases",
            "data": {
              "entity": "knowledgeBases",
              "label": "name",
              "value": "id"
            }
          }
        ]
      },
      {
        "control": "hbox",
        "children": [
          {
            "control": "tree",
            "label": "Category",
            "value": "query.categoryId",
            "data": {
              "entity": "categories",
              "label": "title",
              "value": "id",
              "parentValue": "parentCategoryId"
            }
          },
          {
            "control": "vbox",
            "children": [
              {
                "control": "hbox",
                "children": [
                  {
                    "control": "button",
                    "content": "New Article",
                    "goto": "newArticle"
                  },
                  { "control": "hbox" },
                  {
                    "control": "select",
                    "label": "Tags",
                    "value": "query.tag",
                    "data": {
                      "entity": "tags",
                      "label": "title",
                      "value": "id"
                    }
                  },
                  {
                    "control": "select",
                    "label": "Status",
                    "value": "query.status",
                    "data": {
                      "entity": "articleStatus",
                      "title": "title",
                      "id": "id",
                      "icon": "icon"
                    }
                  },
                  {
                    "control": "searchBox",
                    "label": "Keyword",
                    "value": "query.keyword"
                  }
                ]
              },
              {
                "control": "table",
                "data": {
                  "entity": "articles",
                  "sort": { "column": 0, "asc": true }
                },
                "columns": [
                  {
                    "header": "Title",
                    "content": "title"
                  },
                  {
                    "header": "Category",
                    "content": "category.title"
                  },
                  {
                    "header": "Tags",
                    "content": "tags"
                  },
                  {
                    "header": { "control": "icon", "name": "thumbUp" },
                    "content": "helpful"
                  },
                  {
                    "header": { "control": "icon", "name": "thumbDown" },
                    "content": "notHelpful"
                  },
                  {
                    "header": "Modified Time",
                    "content": {
                      "control": "datetime",
                      "value": "modifiedTime"
                    }
                  },
                  {
                    "header": "Actions",
                    "sortable": false,
                    "content": {
                      "control": "hbox",
                      "children": [
                        {
                          "control": "editButton",
                          "label": "Edit Article",
                          "icon": "edit"
                        },
                        {
                          "control": "previewButton",
                          "label": "Preview Article",
                          "icon": "view",
                          "goto": "url"
                        },
                        {
                          "control": "deleteButton",
                          "label": "Delete Article",
                          "icon": "delete"
                        }
                      ]
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
