{
  "title": "Setting",
  "entities": [
    {
      "name": "knowledgeBases",
      "source": "//localhost:3000"
    },
    {
      "name": "kbVisibility",
      "source": [
        {
          "value": "public",
          "label": "Public: Visible to agents and visitors"
        },
        { "value": "private", "label": "Private: Only visible to agents" }
      ]
    },
    {
      "name": "kbStatus",
      "source": [
        { "value": "open", "label": "Open" },
        { "value": "close", "label": "Close" }
      ]
    },
    {
      "name": "homePageType",
      "source": [
        { "label": "Display the root category", "value": "rootCategory" },
        { "label": "Display a custom page", "value": "customPage" }
      ]
    }
  ],
  "ui": {
    "control": "div",
    "children": [
      {
        "control": "select",
        "className": "kbSelect",
        "title": "Knowledge Bases",
        "bind": "query.kbId",
        "data": {
          "entity": "knowledgeBases",
          "label": "name",
          "value": "id"
        }
      },
      {
        "control": "form",
        "data": { "entity": "knowledgeBases", "id": "query.kbId" },
        "children": [
          {
            "name": "name",
            "control": "input",
            "title": "Name",
            "required": true
          },
          {
            "name": "homePageType",
            "control": "radioGroup",
            "title": "Home",
            "required": false,
            "data": {
              "entity": "homePageType",
              "value": "value",
              "label": "label"
            }
          },
          {
            "name": "visibility",
            "title": "Visibility",
            "control": "radioGroup",
            "data": {
              "entity": "kbVisibility",
              "value": "value",
              "label": "label"
            }
          },
          {
            "name": "allowFeedback",
            "title": "Feedback",
            "label": "Allow visitors to rate Helpful or Not Helpful on articles",
            "control": "checkbox"
          },
          {
            "name": "status",
            "title": "Status",
            "control": "radioGroup",
            "data": { "entity": "kbStatus", "value": "value", "label": "label" }
          }
        ]
      }
    ]
  }
}
