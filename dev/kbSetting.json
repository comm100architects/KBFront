{
  "settings": {
    "endPointPrefix": "//localhost:3000",
    "dateTimeFormat": "MM/DD/YYYY HH:mm:ss"
  },
  "entities": [
    {
      "name": "knowledgeBases",
      "fieldNameForDisplay": "name",
      "fields": [
        { "name": "id", "type": "guid" },
        {
          "name": "name",
          "type": "string",
          "minLength": 0,
          "maxLength": 64,
          "isRequired": true,
          "title": "Name"
        },
        {
          "name": "homePageType",
          "type": "enum",
          "labelsForValue": [
            { "key": 0, "label": "Display the root category" },
            { "key": 1, "label": "Display a custom page" }
          ],
          "title": "Home"
        },
        {
          "name": "homeCustomPageId",
          "type": "reference",
          "referenceEntityName": "customPages",
          "referenceEntityFieldNameForLabel": "title",
          "isRequired": true,
          "title": ""
        },
        {
          "name": "visibility",
          "type": "enum",
          "labelsForValue": [
            { "key": 0, "label": "Public" },
            { "key": 1, "label": "Private" }
          ],
          "title": "Visibility"
        },
        {
          "name": "allowFeedback",
          "type": "bool",
          "labelsForValue": [
            {
              "key": true,
              "label": "Allow visitors to rate Helpful or Not Helpful on articles"
            },
            {
              "key": false,
              "label": "Do not allow visitors to rate Helpful or Not Helpful on articles"
            }
          ],
          "title": "Feedback"
        },
        {
          "name": "status",
          "type": "enum",
          "labelsForValue": [
            { "key": 0, "label": "Public" },
            { "key": 1, "label": "Private" }
          ],
          "title": "Status"
        }
      ]
    },
    {
      "name": "customPages",
      "fieldNameForDisplay": "title",
      "fields": [
        {
          "name": "id",
          "type": "guid",
          "isRequired": true
        },
        {
          "name": "title",
          "type": "string",
          "minLength": 0,
          "maxLength": 1024,
          "isRequired": true
        },
        {
          "name": "status",
          "type": "enum",
          "labelsForValue": [
            { "key": 0, "label": "Close" },
            { "key": 1, "label": "Open" }
          ],
          "title": "Status"
        }
      ]
    }
  ],
  "title": "Settings",
  "entity": "knowledgeBases",
  "rows": [
    {
      "fieldName": "name",
      "componentType": "input"
    },
    {
      "fieldName": "homePageType",
      "componentType": "radioGroup"
    },
    {
      "fieldName": "homeCustomPageId",
      "componentType": "select",
      "indent": 1,
      "conditionsToHide": ["homePageType===0"]
